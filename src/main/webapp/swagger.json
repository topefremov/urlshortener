{
  "swagger" : "2.0",
  "info" : {
    "description" : "URL Shortener Service",
    "version" : "1.0",
    "title" : "URL Shortener API"
  },
  "host" : "localhost:8080",
  "basePath" : "/u",
  "schemes" : [ "http" ],
  "paths" : {
    "/new/{lUrl}" : {
      "get" : {
        "summary" : "Creates short URL",
        "description" : "Correct URL must be provided",
        "operationId" : "getShortUrl",
        "produces" : [ "application/json" ],
        "parameters" : [ {
          "name" : "lUrl",
          "in" : "path",
          "required" : true,
          "type" : "string"
        } ],
        "responses" : {
          "200" : {
            "description" : "Request has been processed successfully"
          },
          "201" : {
            "description" : "Request has been processed successfully. New short URL created."
          },
          "400" : {
            "description" : "Invalid URL provided"
          }
        }
      }
    },
    "/{id}" : {
      "get" : {
        "summary" : "Redirect client to URL associeted with provided shortUrl id",
        "description" : "",
        "operationId" : "redirectToLongUrl",
        "produces" : [ "application/json" ],
        "parameters" : [ {
          "name" : "id",
          "in" : "path",
          "required" : true,
          "type" : "integer",
          "format" : "int64"
        } ],
        "responses" : {
          "304" : {
            "description" : "Request has been processed successfuly. Short URL found and request will be redirected to corresponding URL"
          },
          "404" : {
            "description" : "Short URL id not found or provided path is incorrect"
          }
        }
      }
    }
  }
}